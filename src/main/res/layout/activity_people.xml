<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fragment_padding"
    android:background="@color/fragment_back"
    tools:context=".activity.PeopleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <bon2.androidtv.helper.RoundedImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:riv_corner_radius="5dp"
            android:src="@drawable/default_profile"
            />

        <TextView
            android:id="@+id/people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenick Kanye"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/people_follow_unfollow"
            android:layout_width="150dp"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/btn_edit_profile"
            android:text="Follow"
            android:onClick="onClickFollowUnfollow"
            android:textAllCaps="false">
        </Button>

        <TextView
            android:id="@+id/people_following_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0 Followings, 0 Followers"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/people_overview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:focusable="true"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>

        <TextView
            android:id="@+id/people_posts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>

        <TextView
            android:id="@+id/people_followers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>

        <TextView
            android:id="@+id/people_followings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="Followings"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>

        <TextView
            android:id="@+id/people_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>
    </LinearLayout>
</LinearLayout>