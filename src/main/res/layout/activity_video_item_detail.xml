<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fragment_padding"
    android:background="@color/fragment_back"
    tools:context=".activity.ProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <bon2.androidtv.helper.RoundedImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:riv_corner_radius="5dp"
            android:src="@drawable/default_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arc De Triomphe"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Arc de triomphe de letoile is one of the most famous monuments in Paris, standing at the western end of champs"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/visit_full_profile"
                android:layout_width="150dp"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_edit_profile"
                android:text="Visit full profile"
                android:layout_gravity="bottom"
                android:textAllCaps="false">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/product_social"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Social"
            android:focusable="true"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>

        <TextView
            android:id="@+id/product_profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:background="@drawable/people_textview_background"/>
    </LinearLayout>
</LinearLayout>