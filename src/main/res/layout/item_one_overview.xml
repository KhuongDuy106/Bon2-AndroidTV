<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_one_three_row_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/rl_item_noborder">

    <ImageView
        android:id="@+id/item_logo"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/item_icon" />

    <LinearLayout
        android:id="@+id/item_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_logo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <bon2.androidtv.helper.CircleImageView
                android:id="@+id/people_item_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/default_profile"/>

            <TextView
                android:id="@+id/item_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="3dp"
                android:focusable="false"
                android:singleLine="true"
                android:text="profile text"
                android:textColor="#fff"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_title2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:gravity="start"
            android:ellipsize="marquee"
            android:focusable="false"
            android:freezesText="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="This is test string. Anwar jibawi $ Marton Wayns"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>