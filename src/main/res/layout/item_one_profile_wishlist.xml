<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_one"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <bon2.androidtv.helper.RoundedImageView
        android:id="@+id/item_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/item_icon"
        android:focusable="true"
        android:clickable="true"
        app:riv_border_width="2dp"
        app:riv_border_color="@color/transparent"
        app:riv_corner_radius="0dip"
        app:riv_mutate_background="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:freezesText="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Andres Adidas Originals"
            android:textColor="#0055ff"
            android:textSize="13sp"
            android:paddingLeft="3dp"
            android:textStyle="bold"/>

        <bon2.androidtv.helper.RoundedImageView
            android:id="@+id/wish_queue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_queue"
            android:focusable="true"
            android:clickable="true"
            app:riv_border_width="2dp"
            app:riv_border_color="@color/transparent"
            app:riv_corner_radius="0dip"
            app:riv_mutate_background="true"/>
    </LinearLayout>
</LinearLayout>