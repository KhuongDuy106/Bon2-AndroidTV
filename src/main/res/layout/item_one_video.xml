<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_one_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/item_rounded_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_item_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/item_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="2dp">

            <bon2.androidtv.helper.CircleImageView
                android:paddingTop="2dp"
                android:paddingLeft="1dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/default_profile"/>

            <TextView
                android:id="@+id/video_item_name"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:freezesText="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Video Item User Name"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="13sp"
                android:paddingLeft="3dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Follow"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_item_title"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:freezesText="true"
            android:gravity="center"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="The Best Video Quality"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:paddingLeft="2dp"
            android:textStyle="bold"/>

        <bon2.androidtv.helper.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:src="@drawable/queue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_item_subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="left"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Interactive"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/video_item_subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="left"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Lifestyle Video"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</LinearLayout>